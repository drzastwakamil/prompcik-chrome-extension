{
  "manifest_version": 3,
  "name": "DOM Reader & Overlay",
  "version": "1.0.0",
  "description": "A Chrome extension that reads DOM and adds overlay elements",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}

